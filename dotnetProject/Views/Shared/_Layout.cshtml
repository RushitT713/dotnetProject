    <style>
        .navbar {
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 50px;
            height: 90px;
            z-index: 1000;
            top: 0;
            left: 0;
        }

        .nav-content {
            display: flex;
            align-items: center;
            width: 100%;
            justify-content: space-between;
            position: relative;
        }

        .nav-links {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            gap: 150px;
        }
            .nav-links ul {
                list-style: none;
                padding: 0;
                margin: 0;
                display: flex;
                font: bold 1.2rem sans-serif;
                text-transform: uppercase;
                color: grey;
            }

                .nav-links ul li {
                    padding: 0 .7em .25em;
                    cursor: pointer;
                    position: relative;
                    overflow: hidden;
                    transition: .3s;
                }

                    .nav-links ul li:hover {
                        color: #fff;
                    }

                    .nav-links ul li:before {
                        content: "";
                        position: absolute;
                        inset: calc(100% - 3.5px) 0 0 0; /* 3px = the thickness */
                        /* background: #ce4f20; */
                        background: #f65f28;
                        scale: 0 1;
                        transition: .3s, translate 0s .3s;
                    }

                .nav-links ul:hover li:before {
                    scale: 1;
                }

                .nav-links ul li:hover:before {
                    translate: 0;
                    transition: .3s;
                }

                .nav-links ul:hover li:has(~ li:hover):before {
                    translate: 100% 0;
                    transition: .2s .2s,scale 0s .4s;
                }

                .nav-links ul:hover li:hover ~ li:before {
                    translate: -100% 0;
                    transition: .2s .2s,scale 0s .4s;
                }

        .logo img {
            width: 120px;
            height: auto;
        }
    </style>
</head>

